//-
  name - name attribute for radio's input
  checked - defines, whether radio is checked or not
  label - label for radio

mixin radio-button(options)
  if !options
    - options = {}

  - const {label, name, checked} = options

  label.radio-button
    input.radio-button__input(type = "radio", name = options.name, checked = options.checked)
    span.radio-button__label= options.label