include ../text-field/text-field

mixin datepicker-block(options)
  if !options
    - options = {}

  - 
    const {
      multipleFields, 
      startDate, 
      endDate, 
      fields: {field1, field2}
    } = options

  .datepicker-block
    if multipleFields
      .datepicker-block__field(data-start = startDate)
        +text-field({
          isActive: field1.isActive,
          icon: "expand_more",
          iconColor: field1.iconColor,
          label: field1.label,
          state: field1.state,
          name: field1.name,
          value: field1.value,
          placeholder: field1.placeholder,
          isRequired: field1.isRequired,
          isDisabled: field1.isDisabled,
          mask: "date"
        })
      .datepicker-block__field(data-end = endDate)
        +text-field({
          isActive: field2.isActive,
          icon: "expand_more",
          iconColor: field2.iconColor,
          label: field2.label,
          state: field2.state,
          name: field2.name,
          value: field2.value,
          placeholder: field2.placeholder,
          isRequired: field2.isRequired,
          isDisabled: field2.isDisabled,
          mask: "date"
        })
    else 
      .datepicker-block__field(data-start = startDate, data-end = endDate)
        +text-field({
          isActive: field1.isActive,
          icon: "expand_more",
          iconColor: field1.iconColor,
          label: field1.label,
          state: field1.state,
          name: field1.name,
          value: field1.value,
          placeholder: field1.placeholder,
          isRequired: field1.isRequired,
          isDisabled: field1.isDisabled,
          mask: "date"
        })