extends ../../templates/layouts/layout-main 

block variables 
  -
    let docClasses = "document-registration-page",
        language = "ru",
        keywords = "registration page, password, name, gender, birthdate, account",
        description = "Login page, conataining registration panel",
        docTitle = "Toxin-registration",
        bodyClasses = "page-registration"
    
block includes
  include ../../templates/components/registration-panel/registration-panel
  include ../../templates/components/header/header
  include ../../templates/components/footer/footer

block header 
  header.page-registration__header 
    +header({
      menuItems: [
        {type: "link", url: "add/link", text: "о нас"},
        {type: "button", url: "add/link", text: "услуги", hasArrow: true},
        {type: "link", url: "add/link", text: "вакансии"},
        {type: "link", url: "add/link", text: "новости"},
        {type: "button", url: "add/link", text: "соглашения", hasArrow: true},
      ]
    })

block content
  main.main-content
    .page-registration__container
      .main-content__wrapper
        .main-content__registration-panel 
            +registration-panel({
              action: "add/link/to/server",
              title: "регистрация аккаунта"
            }) 

block footer
  footer.page-registration__footer
    +footer({
      menu: [
        {subtitle: "навигация", listItems: ["о нас", "новости", "слажба подержки", "услуги"]},
        {subtitle: "о нас", listItems: ["о сервисе", "наша команда", "вакансии", "инвесторы"]},
        {subtitle: "служба поддержки", listItems: ["соглашения", "сообщества", "связь с нами"]}
      ],
      copyright: "Copyright © 2018 Toxin отель. Все права защищены.",
      socials: {
        twtiier: "link/to/twitter",
        facebook: "link/to/facebook",
        instagram: "link/to/instagram"
      }
    })

