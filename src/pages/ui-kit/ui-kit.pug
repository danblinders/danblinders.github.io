                  required: false,
                })
              .form-elements__text-fields-item
                +text-field({
                  isActive: true,
                  label: "text field",
                  state: "hover / focus",
                  name: "field",
                  type: "email",
                  placeholder: {
                    text:"This is pretty awesome"
                  },
                  required: false
                })
              .form-elements__text-fields-item
                +dropdown({
                  isBig: true,
                  contentName: "guests",
                  field: {
                    isRequired: true,
                    label: "dropdown",
                    state: "default",
                    placeholder: "Сколько гостей"
                  },
                  menuItems: [
                    {subject: "adults", subtitle: "взрослые", count: "0"},
                    {subject: "children", subtitle: "дети", count: "0"},
                    {subject: "infants", subtitle: "младенцы", count: "0"}
