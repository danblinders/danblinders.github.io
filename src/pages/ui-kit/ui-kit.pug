                +h3-label-cta-text("rate button")
              .form-elements__rate-buttons-content
                +rate-button({
                  action: "add/link/to/server",
                  starsAmount: "5",
                  radioName: "rating",
                  rating: "4"
                })
                +rate-button({
                  action: "add/link/to/server",
                  starsAmount: "5",
                  radioName: "rating",
                  rating: "5"
