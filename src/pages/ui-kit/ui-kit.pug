          .form-elements__buttons
            .form-elements__range-slider 
              +range-slider({
                subtitle: "range slider",
                name: "price",
                min: "0",
                max: "16000",
                start: "5000",
                end: "10000"
              })
            .form-elements__main-buttons 
              .form-elements__main-buttons-title 
                +h3-label-cta-text("buttons")
              .form-elements__main-buttons-content
                .form-elements__main-buttons-wrapper
                  .form-elements__main-buttons-item
                    +main-button({
                      style: "filled",
                      text: 'click me'
                    })
                  .form-elements__main-buttons-item
                    +main-button({
                    style: "filled",
                    text: 'click me',
                    isActive: true
                  })
                .form-elements__main-buttons-wrapper
                  .form-elements__main-buttons-item
                    +main-button({
                      style: "outlined",
                      text: 'click me'
                    })
                  .form-elements__main-buttons-item
                    +main-button({
                      style: "outlined",
                      text: 'click me',
                      isActive: true
                    })
                .form-elements__main-buttons-wrapper
                  .form-elements__main-buttons-item_simple
                    +main-button({
                      style: "simple",
                      text: 'click me'
                    })
                  .form-elements__main-buttons-item.form-elements__main-buttons-item_simple
                    +main-button({
                      style: "simple",
                      text: 'click me',
                      isActive: true
                    })
                .form-elements__main-buttons-item.form-elements__main-buttons-item_big
                  +main-button({
                    style: "filled",
                    hasArrow: true,
                    text: 'перейти к оплате'
                  })
            .form-elements__pagination
              .form-elements__pagination-title 
                +h3-label-cta-text("pagination")
              .form-elements__pagination-content 
                +pagination({
                  pages: 15,
                  activePage: 1,
                  infoText: "1 – 12 из 100+ вариантов аренды"
                })

        .form-elements__row
          .form-elements__small-dropdowns 
